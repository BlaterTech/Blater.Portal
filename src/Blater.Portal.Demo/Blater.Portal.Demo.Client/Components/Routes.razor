@using System.Reflection

<Router AppAssembly="@ExecutingAssembly" AdditionalAssemblies="AdditionalAssemblies">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="typeof(MainLayout)"/>
        <FocusOnNavigate RouteData="routeData" Selector="h1"/>
    </Found>
</Router>

@code
{
    private static readonly Assembly ExecutingAssembly = Assembly.GetEntryAssembly()!;
    private static readonly Assembly FrontEndAssembly = typeof(Program).Assembly;

    private static readonly List<Assembly> AdditionalAssemblies = [FrontEndAssembly];
}