            TertiaryDarken = "#C26EE2",
            TertiaryLighten = "#C26EE2",
            DrawerText = "#FFFFFF",
            DrawerIcon = "#0B9DD0",
            AppbarBackground = "#0B0813",
            AppbarText = "#FFFFFF",
            Background = "#0B0813",
            Surface = "#1c1c1c",
            PrimaryContrastText = "#1c1c1c"
