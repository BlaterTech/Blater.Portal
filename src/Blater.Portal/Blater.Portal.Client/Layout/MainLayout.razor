            Tertiary = "#003f5c",
            TertiaryDarken = "#00202e",
            TertiaryLighten = "#2c4875",
            DrawerText = "#FFFFFF",
            DrawerIcon = "#0B9DD0",
            AppbarBackground = "#0f0f0f",
            AppbarText = "#FFFFFF",
            Background = "#0f0f0f",
            Surface = "#1c1c1c",
            PrimaryContrastText = "#1c1c1c"
        },
        Typography = new Typography
        {
            Button = new Button
