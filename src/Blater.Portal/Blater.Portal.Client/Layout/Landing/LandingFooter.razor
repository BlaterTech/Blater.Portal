@using Icons = MudBlazor.Icons

<div class="d-flex align-center justify-center" style="width: 100%">
    <MudGrid
        Justify="Justify.Center"
        Spacing="2" Class="my-16 mud-width-full mud-height-full gradient-background-2 rounded" Style="height: 40vh;width: 100%">
        <MudItem xs="6" Class="d-flex align-center justify-center">
            <div class="d-flex flex-column gap-4 pa-6">
                <MudText Typo="Typo.h4" Color="Color.Inherit">Join our community</MudText>
                <MudText>of stargazers, explorers, and cosmic enthusiasts as we embark on a journey through the cosmos like never before.</MudText>
                <MudButton Color="Color.Dark" Variant="Variant.Filled" Size="Size.Small" Style="width: 40%" Class="rounded-pill">Subscribe</MudButton>
            </div>
        </MudItem>
        <MudItem xs="6" Class="d-flex align-center justify-center">
            <MudImage Src="notebook.svg" Width="240"/>
        </MudItem>
    </MudGrid>
</div>

<MudGrid Class="docs-footer">
    <MudItem xs="12" sm="4">
        <BlaterLogo/>
        <div class="d-flex mt-4">
            <MudIconButton Href="https://twitter.com/MudBlazor" Target="_blank" Edge="Edge.Start" Class="me-2" Color="Color.Inherit" Icon="@Icons.Custom.Brands.Twitter" aria-label="twitter"/>
            <MudIconButton Href="https://discord.gg/mudblazor" Target="_blank" Edge="Edge.Start" Class="me-2" Color="Color.Inherit" Icon="@Icons.Custom.Brands.Discord" aria-label="discord"/>
            <MudIconButton Href="https://github.com/MudBlazor/MudBlazor" Target="_blank" Edge="Edge.Start" Class="me-2" Color="Color.Inherit" Icon="@Icons.Custom.Brands.GitHub" aria-label="github"/>
        </div>
    </MudItem>
    <MudItem xs="12" sm="2" Class="d-flex flex-column">
        <MudText Typo="Typo.subtitle2" Class="mb-3">Products</MudText>
        <MudLink Href="#" Typo="Typo.body1" Color="Color.Inherit" Underline="Underline.None">Database</MudLink>
    </MudItem>
    <MudItem xs="12" sm="2" Class="d-flex flex-column">
        <MudLink Href="#" Typo="Typo.body1" Color="Color.Inherit" Underline="Underline.None">Pricing</MudLink>
    </MudItem>
    <MudItem xs="12" sm="2" Class="d-flex flex-column">
        <MudLink Href="#" Typo="Typo.body1" Color="Color.Inherit" Underline="Underline.None">About</MudLink>
    </MudItem>
    <MudItem xs="12" sm="2" Class="d-flex flex-column">
        <MudLink Href="#" Typo="Typo.body1" Color="Color.Inherit" Underline="Underline.None">FAQ</MudLink>
    </MudItem>
    <MudItem xs="12" Class="d-flex align-center justify-center">
        <MudToolBar Dense="true">
            <MudText Typo="Typo.body1">@("Copyright 2024, All Rights Reserved. Blater")</MudText>
        </MudToolBar>
    </MudItem>
</MudGrid>