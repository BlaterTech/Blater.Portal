<div class="d-flex gap-2 mx-1 px-3">
    <MudMenu
        Color="Color.Inherit"
        Variant="Variant.Text"
        PopoverClass="docs-layout-menu-shadow"
        ListClass="d-flex px-4 pb-2 docs-appbar-special-menu"
        LockScroll="true"
        Label="Products"
        EndIcon="@Material.Filled.KeyboardArrowDown"
        AnchorOrigin="Origin.BottomCenter"
        TransformOrigin="Origin.TopCenter">
        <MudList T="string">
            <MudListSubheader>
                Products
            </MudListSubheader>
            <MudListItem Href="/products/database">
                <div class="d-flex">
                    <MudText Color="Color.Tertiary">@("Blater ")</MudText><MudText> Database</MudText>
                </div>
                <MudText Typo="Typo.body2">
                    Distributed database.
                </MudText>
            </MudListItem>  
            <MudListItem Href="/products/authentication">
                <div class="d-flex">
                    <MudText Color="Color.Tertiary">@("Blater ")</MudText><MudText> Authentication</MudText>
                </div>
                <MudText Typo="Typo.body2">Easy-to-use distributed authentication.</MudText>
            </MudListItem>
            <MudListItem Href="/products/serverless-hosting">
                <div class="d-flex">
                    <MudText Color="Color.Tertiary">@("Blater ")</MudText><MudText> Serverless Hosting</MudText>
                </div>
                <MudText Typo="Typo.body2">Effortless global application.</MudText>
            </MudListItem>
        </MudList>
    </MudMenu>

    <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="/pricing">Pricing</MudButton>
    <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="/about">About</MudButton>
    <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="/faq">FAQ</MudButton>
</div>