@using Icons = MudBlazor.Icons
@inherits LayoutComponentBase

@layout MainLayout

<MudLayout Class="mudblazor-landingpage">
    <MudAppBar Fixed="true" Class="landing-appbar" Elevation="0" ToolBarClass="">
        <MudContainer MaxWidth="MaxWidth.Large">
            <LandingAppbar DrawerToggleCallback="ToggleDrawer"/>
        </MudContainer>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="25" Variant="@DrawerVariant.Temporary" aria-label="Navigation Drawer">
        <MudToolBar Dense="true" Gutters="false" Class="px-1 docs-gray-bg">
            <MudIconButton Icon="@Icons.Material.Rounded.Close" Color="Color.Inherit" OnClick="@ToggleDrawer" />
            <MudSpacer/>
        </MudToolBar>
        <MudNavMenu Color="Color.Primary" Margin="Margin.Dense" Rounded="true" Class="pa-2">
            <MudNavLink Href="#">Test 1</MudNavLink>
            <MudNavLink Href="#">Test 2</MudNavLink>
            <MudNavLink Href="/pricing">Princing</MudNavLink>
            <MudNavGroup Title="Products" ExpandIcon="@Icons.Material.Filled.ExpandMore">
                <MudNavLink Href="#">Blater</MudNavLink>
            </MudNavGroup>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
            <BlaterLandingSection SectionClass="lp-footer" BackgroundClass="sweet" Class="mud-text-secondary pb-8">
                <LandingFooter></LandingFooter>
            </BlaterLandingSection>
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    private bool _drawerOpen;
    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}