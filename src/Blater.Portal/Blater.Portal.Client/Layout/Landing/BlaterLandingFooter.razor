<div class="d-flex align-center justify-center" style="width: 100%">
    <MudGrid
        Justify="Justify.Center"
        Spacing="2" Class="my-16 mud-width-full mud-height-full gradient-background-1 rounded">
        <MudItem xs="6" md="6" lg="6" xl="6" xxl="6" Class="d-flex flex-column align-start justify-center">
            <div class="d-flex flex-column gap-4 pa-6">
                <MudText Typo="Typo.h4" Color="Color.Inherit">Join our community</MudText>
                <MudText>of stargazers, explorers, and cosmic enthusiasts as we embark on a journey through the cosmos like never before.</MudText>
                <div class="d-flex align-start">
                    <MudButton Color="Color.Dark" Variant="Variant.Filled" Size="Size.Small" Class="rounded-pill px-4 py-2">Subscribe</MudButton>
                </div>
            </div>
        </MudItem>
        <MudItem xs="6" md="6" lg="6" xl="6" xxl="6" Class="d-flex align-center justify-center">
            <MudImage Src="img/notebook.svg" Style="max-width: 240px" Class="mud-width-full mud-height-full pa-2"/>
        </MudItem>
    </MudGrid>
</div>

<MudGrid Class="docs-footer">
    <MudItem xs="12" sm="4">
        <BlaterLogo/>
        <div class="d-flex mt-4">
            <MudIconButton Href="#" Target="_blank" Edge="Edge.Start" Class="me-2" Color="Color.Inherit" Icon="@Custom.Brands.Twitter" aria-label="twitter"/>
            <MudIconButton Href="#" Target="_blank" Edge="Edge.Start" Class="me-2" Color="Color.Inherit" Icon="@Custom.Brands.Discord" aria-label="discord"/>
            <MudIconButton Href="#" Target="_blank" Edge="Edge.Start" Class="me-2" Color="Color.Inherit" Icon="@Custom.Brands.GitHub" aria-label="github"/>
        </div>
    </MudItem>
    <MudItem xs="12" sm="2" Class="d-flex flex-column">
        <MudText Typo="Typo.subtitle2" Class="mb-3">Products</MudText>
        <MudLink Href="/products/database" Typo="Typo.body1" Color="Color.Inherit" Underline="Underline.None">Database</MudLink>
    </MudItem>
    <MudItem xs="12" sm="2" Class="d-flex flex-column">
        <MudLink Href="/pricing" Typo="Typo.body1" Color="Color.Inherit" Underline="Underline.None">Pricing</MudLink>
    </MudItem>
    <MudItem xs="12" sm="2" Class="d-flex flex-column">
        <MudLink Href="/about" Typo="Typo.body1" Color="Color.Inherit" Underline="Underline.None">About</MudLink>
    </MudItem>
    <MudItem xs="12" sm="2" Class="d-flex flex-column">
        <MudLink Href="/faq" Typo="Typo.body1" Color="Color.Inherit" Underline="Underline.None">FAQ</MudLink>
    </MudItem>
    <MudItem xs="12" Class="d-flex align-center justify-center">
        <MudToolBar Dense="true">
            <MudText Typo="Typo.body1">@("Copyright 2024, All Rights Reserved. Blater")</MudText>
        </MudToolBar>
    </MudItem>
</MudGrid>