<div class="d-flex align-center flex-grow-1 d-md-none">
    <NavLink ActiveClass="d-flex align-center" href="/">
        <BlaterLogo/>
    </NavLink>
    <MudSpacer/>
    <MudTooltip Delay="1000" Text="Drawer">
        <MudIconButton OnClick="DrawerToggleCallback" Icon="@Material.Rounded.Notes" Color="Color.Inherit" Edge="Edge.Start"/>
    </MudTooltip>
</div>

<div class="d-none d-md-flex align-center flex-grow-1">
    <NavLink ActiveClass="d-flex align-center me-4" href="/">
        <BlaterLogo/>
    </NavLink>
    <BlaterLandingNavMenu/>
    <MudSpacer/>
    <div class="d-flex align-center justify-center gap-2">
        <MudTooltip Delay="1000" Text="GitHub">
            <MudIconButton Href="#" Target="_blank" Icon="@Custom.Brands.GitHub" Color="Color.Inherit" Edge="Edge.End"/>
        </MudTooltip>
        <MudButton
            Href="/account/register"
            Size="Size.Medium"
            Variant="Variant.Outlined">
            Sign Up
        </MudButton>
        <MudButton
            Href="/account/login"
            Class="gradient-background-2"
            Size="Size.Medium"
            Variant="Variant.Filled">
            Log In
        </MudButton>
    </div>
</div>

@code {

    [Inject]
    private NavigationManager NavigationManager { get; set; } = null!;

    [Parameter]
    public EventCallback<MouseEventArgs> DrawerToggleCallback { get; set; }

}