@inherits LayoutComponentBase

@layout BlaterMainLayout

<MudLayout Class="mudblazor-landingpage">
    <MudAppBar Class="landing-appbar" Elevation="0">
        <MudContainer MaxWidth="MaxWidth.Large">
            <BlaterLandingAppbar DrawerToggleCallback="ToggleDrawer"/>
        </MudContainer>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="25" Variant="@DrawerVariant.Temporary" aria-label="Navigation Drawer">
        <MudToolBar Dense="true" Gutters="false" Class="px-1 docs-gray-bg">
            <MudIconButton Icon="@Material.Rounded.Close" Color="Color.Inherit" OnClick="@ToggleDrawer" />
            <MudSpacer/>
        </MudToolBar>
        <MudNavMenu Color="Color.Primary" Margin="Margin.Dense" Rounded="true" Class="pa-2">
            <MudNavGroup Title="Products" ExpandIcon="@Material.Filled.ExpandMore">
                <MudNavLink Href="/products/database">Blater</MudNavLink>
            </MudNavGroup>
            <MudNavLink Href="/pricing">Princing</MudNavLink>
            <MudNavLink Href="/about">About</MudNavLink>
            <MudNavLink Href="/faq">FAQ</MudNavLink>
        </MudNavMenu>
    </MudDrawer>s
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
            <BlaterLandingSection SectionClass="lp-footer" BackgroundClass="sweet" Class="mud-text-secondary pb-8">
                <BlaterLandingFooter/>
            </BlaterLandingSection>
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    private bool _drawerOpen;
    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}