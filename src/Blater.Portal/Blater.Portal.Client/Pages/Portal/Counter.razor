@page "/counter"

@using Blater.Frontend.StateManagement.States
@inherits Blater.Frontend.StateManagement.Components.BlaterStateComponent

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @CounterState?.Count</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private CounterState? CounterState { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            CounterState = await GetState<CounterState>();
            StateHasChanged();
        }
    }

    private async Task IncrementCount()
    {
        CounterState!.Count++;
        await SetState(CounterState);
        StateHasChanged();
    }

}