
@using BlazorMonaco.Editor
@inject IJSRuntime JSRuntime

<StandaloneCodeEditor Id="my-editor-instance-id" ConstructionOptions="EditorConstructionOptions" />
@code
{
    private StandaloneEditorConstructionOptions EditorConstructionOptions(StandaloneCodeEditor editor)
    {
        return new StandaloneEditorConstructionOptions
        {
            AutomaticLayout = true,
            Language = "sql",
            Value = "SELECT superhero.name\nFROM city, superhero\nWHERE ST_Contains(city.open, superhero.geom)\nAND city.name = 'Gotham';",
            Dimension = new Dimension
            {
                Width = 500,
                Height = 100
            },
            Comments = new EditorCommentsOptions
            {
                IgnoreEmptyLines = true,
                InsertSpace = false
            },
            Minimap = new EditorMinimapOptions
            {
                Enabled = false,
            },
            Theme = "vs-dark",
            Scrollbar = new EditorScrollbarOptions
            {
                IgnoreHorizontalScrollbarInContentHeight = true,
            },
            ReadOnly = true
        };
    }
}
